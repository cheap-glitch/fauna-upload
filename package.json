{
  "name": "fauna-upload",
  "description": "Upload GraphQL schemas, resources and data to your Fauna databases from the command line.",
  "version": "0.8.0",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheap-glitch/fauna-upload.git"
  },
  "bugs": {
    "url": "https://github.com/cheap-glitch/fauna-upload/issues"
  },
  "author": "cheap glitch <cheap.glitch@gmail.com> (https://github.com/cheap-glitch)",
  "homepage": "https://github.com/cheap-glitch/fauna-upload#readme",
  "keywords": [
    "fauna",
    "faunadb",
    "fauna-database",
    "database-management",
    "database-data-upload"
  ],
  "main": "build/index.min.js",
  "types": "build/index.d.ts",
  "bin": "build/bin/fauna-upload.js",
  "files": [
    "build"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rimraf build && npm run build",
    "build:watch": "tsc --watch",
    "coverage": "npm test -- --collectCoverage",
    "coverage:upload": "coveralls < .coverage/lcov.info",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "prepublishOnly": "npm run test && npm run build:clean",
    "test": "jest --runInBand",
    "test:install": "npm run build:clean && sudo npm uninstall -g fauna-upload && sudo npm link",
    "test:start": "docker run --rm --name faunadb -p 8443:8443 -p 8084:8084 -v $(realpath .faunadb.yml):/etc/faunadb.yml fauna/faunadb --config /etc/faunadb.yml",
    "test:watch": "npm test -- --watch"
  },
  "git-hooks": {
    "pre-push": {
      "noVerify": true
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": "@cheap-glitch/typescript",
    "env": {
      "es6": true,
      "node": true
    }
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "jest-extended",
      "<rootDir>/test/setup.ts"
    ],
    "slowTestThreshold": 15,
    "coverageDirectory": ".coverage"
  },
  "dependencies": {
    "faunadb": "^4.0.0",
    "fetch-h2": "^2.5.1",
    "find-up": "^5.0.0",
    "ora": "^5.3.0",
    "v8-compile-cache": "^2.3.0",
    "yargs": "^17.1.1",
    "yesno": "^0.3.1"
  },
  "optionalDependencies": {
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@cheap-glitch/eslint-config-typescript": "^1.3.0",
    "@cheap-glitch/typescript-config": "^1.0.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "jest": "^27.1.1",
    "jest-extended": "^0.11.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
