{
  "name": "fauna-upload",
  "description": "A Node module to upload schemas, resources and data to a Fauna database.",
  "version": "0.0.1",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheap-glitch/fauna-upload.git"
  },
  "bugs": {
    "url": "https://github.com/cheap-glitch/fauna-upload/issues"
  },
  "author": "cheap glitch <cheap.glitch@gmail.com> (https://github.com/cheap-glitch)",
  "homepage": "https://github.com/cheap-glitch/fauna-upload#readme",
  "keywords": [
    "fauna",
    "faunadb",
    "fauna-database",
    "database-management",
    "database-data-upload"
  ],
  "main": "./build/index.min.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npm run build:ts && npm run build:minify",
    "build:minify": "terser --compress --mangle toplevel --comments '/^!/' --output build/index.min.js -- build/index.js",
    "build:ts": "tsc-bundle ./tsconfig.json --exportAs commonjs",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "prepublishOnly": "npm run build",
    "test": "jest --useStderr",
    "upload:coverage": "coveralls < .coverage/lcov.info"
  },
  "git-hooks": {
    "pre-push": {
      "noVerify": true
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "jest-extended",
      "<rootDir>/test/setup.ts"
    ],
    "slowTestThreshold": 15,
    "collectCoverage": true,
    "coverageDirectory": ".coverage"
  },
  "dependencies": {
    "faunadb": "^4.0.0",
    "fetch-h2": "^2.5.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.16.0",
    "eslint-plugin-smarter-tabs": "^1.1.2",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "terser": "^5.5.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "typescript-bundle": "^1.0.17"
  }
}
